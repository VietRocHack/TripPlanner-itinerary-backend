[Unit]
Description=Gunicorn instance for host service
After=network.target

[Service]
User=ec2-user
Group=nobody
WorkingDirectory=/home/ec2-user/tripplanner-backend/itinerary/host
ExecStart=/home/ec2-user/tripplanner-backend/itinerary/host/venv/bin/gunicorn -b localhost:8000 app:app
Restart=always

[Install]
WantedBy=multi-user.target